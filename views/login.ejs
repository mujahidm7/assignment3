<%- include('partials/header') %>

<div class="container mt-4">
  <h2>Login</h2>
  <p class="text-muted">Login to manage your assignments. Guests can still view them.</p>

  <!-- Local login -->
  <form action="/login" method="POST" class="mt-3 mb-4">
    <div class="mb-3">
      <label>Email</label>
      <input type="email" name="email" class="form-control" required>
    </div>

    <div class="mb-3">
      <label>Password</label>
      <input type="password" name="password" class="form-control" required>
    </div>

    <button class="btn btn-primary w-100">Login</button>
  </form>

  <hr>

  <h5>Or continue with</h5>

  <a href="/auth/google" class="btn btn-danger w-100 mt-2">Continue with Google</a>
  <a href="/auth/github" class="btn btn-dark w-100 mt-2">Continue with GitHub</a>

  <p class="mt-4">
    <a href="/assignments">Continue as Guest (Read Only)</a>
  </p>
</div>

<%- include('partials/footer') %>
